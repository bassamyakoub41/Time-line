<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- import font family from google fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Kode+Mono:wght@400..700&display=swap" rel="stylesheet">
  <!-- bootstrap css link -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <!-- locale style -->
  <link rel="stylesheet" href="/style.css" type="text/css">
  <title>TimeLine</title>
</head>
<body>
  <header>TIME LINE</header>

  <form action="/" method="post"> 
    <label for="name">Name</label>
    <input class="form-control input" name="name" type="text" placeholder="Place your Name here ">
    <label for="message">Message</label>
    <textarea class="form-control texterea" id="exampleFormControlTextarea1" rows="3" name="message" placeholder="Write your Message here"></textarea>
    <button class="btn btn-warning btns" type="submit">Post a message</button>
  </form>

  <% Msg.forEach(item => { %>
    <div class="message-container">
      <h1 class="name timename"><%= item.name%></h1>
      <p class="time"><%= item.createdAt %></p>
      <p class="content"><%=item.message%></p>

      <!-- Form to add comments -->
      <form action="/comments/<%= item._id %>" method="post">
        <label for="comment-name">Name</label>
        <input class="form-control input" name="name" type="text" placeholder="Your Name">
        <label for="comment-message">Comment</label>
        <textarea class="form-control texterea" name="comment" placeholder="Write your Comment"></textarea>
        <button class="btn btn-warning btns" type="submit">Post a Comment</button>
      </form>

      <!-- Display existing comments -->
      <div class="comments-container">
        <% item.comments.forEach(comment => { %>
          <p class="comment-name"><%= comment.name %></p>
          <p class="comment-content"><%= comment.comment %></p>
        <% }); %>
      </div>
    </div>
  <% }) ;%>

  <!-- get data from view engine -->
  <ul class="list">
    <% post.forEach(item => { %>
      <li class="name"><%= item.name %></li>
      <li class="date"><%= item.createdAt %></li>
      <li class="content"><%=item.message%></li>
    <% }); %>
  </ul>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
<footer>Copyright &copy; 2024 By Bassam Yakoub</footer>
</html>


